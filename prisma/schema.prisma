generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WeatherRecord {
  id          Int      @id @default(autoincrement())
  city        String
  country     String?
  temp        Float?
  humidity    Int?
  description String?
  sourceTime  DateTime?
  createdAt   DateTime @default(now())

  @@index([city])
  @@map("weather_records")
}
